{
  "name": "victor.co.zm",
  "version": "0.1.0",
  "description": "Victor Miti's homepage",
  "author": "Victor Miti <https://github.com/engineervix>",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "commit": "git-cz",
    "lint:style": "stylelint \"**/*.{scss,css}\" --ignore-path .gitignore",
    "lint:format": "prettier --check 'src/**/?(.)*.{md,css,scss,js,json,yaml,yml}'",
    "lint": "npm run lint:style && npm run lint:format",
    "css-fix": "npx stylelint src/css/ --fix",
    "release": "commit-and-tag-version"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "commit-and-tag-version": "^12.4.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "vite": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "scss/at-import-partial-extension": null
    },
    "ignoreFiles": [
      "**/dist/**/*.*"
    ]
  },
  "browserslist": [
    "defaults",
    "cover 99.5%"
  ],
  "commit-and-tag-version": {
    "header": "# Changelog\n\nAll notable changes to this project will be documented here.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project attempts to adhere to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n",
    "types": [
      {
        "type": "feat",
        "section": "üöÄ Features"
      },
      {
        "type": "fix",
        "section": "üêõ Bug Fixes"
      },
      {
        "type": "docs",
        "section": "üìù Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "üíÑ Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "‚ôªÔ∏è Code Refactoring"
      },
      {
        "type": "perf",
        "section": "‚ö°Ô∏è Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "‚úÖ Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "‚öôÔ∏è Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "üë∑ CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "üöß Others",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "‚è™Ô∏è Reverts",
        "hidden": true
      }
    ],
    "scripts": {
      "prechangelog": "sed -e '1,6d' -i CHANGELOG.md",
      "postchangelog": "sed -e 's/###\\ \\[/##\\ \\[v/g' -i CHANGELOG.md && sed -re 's/##\\ \\[([0-9])/##\\ \\[v\\1/g' -i CHANGELOG.md"
    }
  },
  "engines": {
    "node": "^20 <21"
  },
  "volta": {
    "node": "20.16.0"
  }
}
