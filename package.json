{
  "name": "victor.co.zm",
  "version": "0.2.0",
  "description": "Victor Miti's homepage",
  "author": "Victor Miti <https://github.com/engineervix>",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "commit": "git-cz",
    "eslint": "eslint --ext \".js\" --ignore-path .gitignore",
    "prettier": "prettier --check .",
    "stylelint": "stylelint \"**/*.{scss,css}\" --ignore-path .gitignore",
    "prettier:fix": "prettier --write .",
    "stylelint:fix": "npm run stylelint -- --fix",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky",
    "release": "commit-and-tag-version"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.0.0",
    "@commitlint/prompt-cli": "^20.0.0",
    "autoprefixer": "^10.4.20",
    "commit-and-tag-version": "^12.4.2",
    "commitizen": "^4.3.0",
    "conventional-changelog-atom": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.3",
    "sass": "^1.83.4",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "vite": "^6.0.11"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "parserPreset": "conventional-changelog-atom"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run eslint",
      "npm run prettier:fix"
    ],
    "*.{scss,css}": [
      "npm run stylelint:fix",
      "npm run prettier:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": "plugin:prettier/recommended",
    "parserOptions": {
      "requireConfigFile": false,
      "babelOptions": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "scss/at-import-partial-extension": null
    },
    "ignoreFiles": [
      "**/dist/**/*.*"
    ]
  },
  "browserslist": [
    "defaults",
    "cover 99.5%"
  ],
  "commit-and-tag-version": {
    "header": "# Changelog\n\nAll notable changes to this project will be documented here.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/), and this project attempts to adhere to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n",
    "types": [
      {
        "type": "feat",
        "section": "üöÄ Features"
      },
      {
        "type": "fix",
        "section": "üêõ Bug Fixes"
      },
      {
        "type": "docs",
        "section": "üìù Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "üíÑ Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "‚ôªÔ∏è Code Refactoring"
      },
      {
        "type": "perf",
        "section": "‚ö°Ô∏è Performance Improvements",
        "hidden": false
      },
      {
        "type": "test",
        "section": "‚úÖ Tests",
        "hidden": false
      },
      {
        "type": "build",
        "section": "‚öôÔ∏è Build System",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "üë∑ CI/CD",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "üöß Others",
        "hidden": true
      },
      {
        "type": "revert",
        "section": "‚è™Ô∏è Reverts",
        "hidden": true
      }
    ],
    "scripts": {
      "prechangelog": "sed -e '1,6d' -i CHANGELOG.md",
      "postchangelog": "sed -e 's/###\\ \\[/##\\ \\[v/g' -i CHANGELOG.md && sed -re 's/##\\ \\[([0-9])/##\\ \\[v\\1/g' -i CHANGELOG.md"
    }
  },
  "engines": {
    "node": "^20 <23"
  },
  "volta": {
    "node": "22.20.0"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "modern-normalize": "^3.0.1"
  }
}
